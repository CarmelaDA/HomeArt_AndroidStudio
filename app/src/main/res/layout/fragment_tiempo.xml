                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="152dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/interior"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
