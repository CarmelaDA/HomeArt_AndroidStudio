                    app:layout_constraintTop_toBottomOf="@+id/switch_modo" />

                <TextView
                    android:id="@+id/text_hum_ext_dat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="110dp"
                    android:text="73,8 %"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_hum_ext" />

                <ToggleButton
                    android:id="@+id/toggle_calefactor_int"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/toggle_calefaccion_bg"
                    android:clickable="false"
                    android:textOff=""
