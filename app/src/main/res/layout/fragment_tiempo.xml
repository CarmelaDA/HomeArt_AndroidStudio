                    app:layout_constraintTop_toBottomOf="@+id/text_temp_int_dat"
                    tools:ignore="DuplicateSpeakableTextCheck" />

                <Switch
                    android:id="@+id/switch_calefaccion_ext"
                    android:layout_width="wrap_content"
